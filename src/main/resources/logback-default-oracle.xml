<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/apps/fecim/global/exensio-ref-tab-61050-tomcat9/logs/exensio-ref-tables-ws.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>/apps/fecim/global/exensio-ref-tab-61050-tomcat9/logs/archive/exensio-ref-tables-ws.%d{yy-MM-dd}.log.gz</FileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd_HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="MAIN_APPENDER_JSON" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <encoder class="co.elastic.logging.logback.EcsEncoder">
            <serviceName>${SERVICE_NAME}</serviceName>
            <additionalField>
                <key>service.environment</key>
                <value>${HA_ENV_TYPE}</value>
            </additionalField>
            <additionalField>
                <key>service.country</key>
                <value>${HA_SITE}</value>
            </additionalField>
            <additionalField>
                <key>service.name</key>
                <value>${SERVICE_NAME}</value>
            </additionalField>
        </encoder>
        <File>/apps/fecim/global/logs/exensio-ref-tab-61050-tomcat9/logs/json/ert.json</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>/apps/fecim/global/logs/exensio-ref-tab-61050-tomcat9/logs/json/archive/ert.%d{yy-MM-dd}.json.gz</FileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
    </appender>

    <logger name="com.onsemi.cim.apps" level="DEBUG" />
    <logger name="org.springframework.beans.factory" level="ERROR" />
    <logger name="org.springframework.context.support" level="ERROR" />
    <logger name="org.dozer" level="ERROR" />

    <root level="info">
        <appender-ref ref="FILE"/>
        <appender-ref ref="MAIN_APPENDER_JSON"/>
    </root>

</configuration>
